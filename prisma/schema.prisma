generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:senai@127.0.0.1:3306/auth_db"
}

// user table
model user {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  token    token[]
  pedido   pedido[]
  produto   produto[]
}

// token table
model token {
  id        Int      @id @default(autoincrement())
  token     String   @db.VarChar(255)
  type      String
  userId    Int
  revoked   Boolean  @default(value: false)
  expiresAt DateTime
  user      user     @relation(fields: [userId], references: [id])
}

//produto
model produto {
  id        Int      @id @default(autoincrement())
  marca     String
  modelo    String
  ano       Int
  cor       String
  motor     String
  cambio    String
  preco     Decimal
  status    String
  bloco     Json
  estoque   Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      user     @relation(fields: [userId], references: [id])
  pedido    pedido[] @relation("produtosEmPedidos")
}

// pedido
model pedido {
  id        Int       @id @default(autoincrement())
  valor     Decimal
  status    String
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      user      @relation(fields: [userId], references: [id])
  produto   produto[] @relation("produtosEmPedidos")
}
